<resources>

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="toolbarStyle">@style/Widget.Covid19.Toolbar</item>
        <item name="colorOnPrimaryOpaque">@color/colorOnPrimaryOpaque</item>
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
    </style>

    <style name="Widget.Covid19.ToolbarSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">?attr/colorOnPrimaryOpaque</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="colorAccent">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.Covid19.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>

    <style name="SectionHeaderButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textSize">16sp</item>
        <item name="iconTint">@color/primaryTextColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>
